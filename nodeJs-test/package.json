{
  "name": "sample",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "watch": {
    "build": {
      "patterns": [
        "src/app/cv"
      ],
      "extensions": "ts,html,css",
      "quiet": false
    },
    "run-dev": {
      "patterns": [
        "dist"
      ],
      "extensions": "js,jsx",
      "ignore": "src/vendor/external.min.js",
      "quiet": true,
      "legacyWatch": true,
      "delay": 2500,
      "runOnChangeOnly": false
    },
    "test": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": true,
      "legacyWatch": true,
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "clean-modules": "rm node_modules -R;",
    "setup-modules": "npm install;",
    "build": "npm run clean && tsc",
    "clean": "rimraf dist/ & rimraf output/",
    "copy-files": "copyfiles -u 1 src/*.js src/css/*.css dist/",
    "run-dev": "npm run copy-files && nodemon dist/app/index.js --trace-uncaught",
    "start": "npm run build && npm run run-dev",
    "test": "cross-env TS_NODE_FILES=true mocha --exit --require ts-node/register --colors src/**/*.spec.ts",
    "coverage": "nyc npm run test",
    "coverage2": "nyc --reporter=lcov --reporter=text-lcov npm test",
    "watch": "npm-watch"
  },
  "nyc": {
    "_comment": "Purpose of this part: to do code coverage within Mocha/Chai using Istanbul",
    "register": "babel-register",
    "include": [
      "dist/**/*.js",
      "src/**/*.ts"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/test/**",
      "**/coverage/**",
      "**/*spec.ts"
    ],
    "all": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "csv-parser": "^3.0.0",
    "express": "^4.17.1",
    "line-reader": "^0.4.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.17.11",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "chai": "^4.2.0",
    "concurrently": "^6.0.0",
    "copyfiles": "^2.4.1",
    "cross-env": "^5.2.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.2.0",
    "nodemon": "^2.0.7",
    "nyc": "^14.1.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.3.0",
    "typescript": "~4.1.5",
    "watch": "^1.0.2"
  }
}
